---
import { Image } from 'astro:assets'
import portrait from '../assets/me.png'
import Card from './Card.astro'
import IconText from './IconText.astro'
import IconWrapper from './IconWrapper.astro'
---

<aside class="top-5 flex flex-col items-center justify-center pt-16 md:sticky md:col-span-1 md:h-screen md:pl-5">
  <Image src={portrait} alt="john day profile photo" class="z-10 h-56 w-auto rounded-3xl bg-accent-200 p-1" loading="eager" />

  <Card class="mt-[-6rem] w-full max-w-[400px] bg-background-tertiary p-5">
    <div class="flex flex-col items-center gap-y-4 pb-10 pt-24">
      <h1 class="text-3xl font-bold text-secondary-foreground">John Day</h1>
      <h2 class="text-xl text-secondary-foreground">Full Stack Developer</h2>

      <div class="flex flex-row gap-x-4 pb-3 pt-1">
        <a href="https://github.com/johntday" target="_blank" aria-label="github"
          ><IconWrapper href="https://github.com/johntday" icon="github" classIcon="h-5 w-5" class="bg-accent-200" /></a
        >
        <a href="https://www.linkedin.com/in/johntday" target="_blank" aria-label="linkedin"
          ><IconWrapper href="https://www.linkedin.com/in/johntday" icon="linkedin" classIcon="h-5 w-5" class="bg-accent-200" /></a
        >
      </div>
      <Card class="flex w-full flex-col gap-x-7 gap-y-1 bg-background-secondary p-5 text-secondary-foreground">
        <IconText title="SMS" subTitle="417-499-1559" icon="phone" />
        <div class="border-t border-border"></div>
        <IconText title="Email" subTitle="johntday@gmail.com" icon="mail" />
        <div class="border-t border-border"></div>
        <IconText title="Location" subTitle="Springfield, MO" icon="location" />
      </Card>
    </div>

    <a
      href="https://www.icloud.com/iclouddrive/005GpQ3OqmD43miW_SFTwnK4g#john-day%5Ffull-stack"
      target="_blank"
      class="hover:shadow-background-tertiary/40 flex flex-row items-center justify-center gap-x-3 rounded-3xl bg-accent-200 px-4 py-2 text-sm transition-all hover:shadow-md dark:shadow-black/50 hover:dark:shadow-white/30"
    >
      <p class="text-lg font-bold">Download Resume</p>
    </a>
  </Card>
</aside>
